{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

<slideshow-component
  class="slider--full-bleed banner--large banner--bottom-center"
  role="region"
  aria-roledescription="Carousel"
  aria-label="Homepage Hero"
  data-autoplay="false"
  data-speed="5"
>
  {% comment %} Slide 1: Minimal AF {% endcomment %}
  <div
    class="slideshow__slide slider__slide"
    style="background-image: url({{ section.blocks[0].settings.image | img_url: '2048x' }});"
  >
    <div class="slideshow__text banner__content page-width">
      <div class="banner__box color-{{ section.blocks[0].settings.color_scheme | default: '1' }}">
        <h1 class="banner__heading h0">Minimal AF</h1>
        <p class="banner__text">Super-thin. Lightweight. Made for Minimalists.</p>
        <a href="/collections/all" class="button button--primary">Shop Now</a>
      </div>
    </div>
  </div>

  {% comment %} Slide 2: Ultra Armor {% endcomment %}
  <div
    class="slideshow__slide slider__slide"
    style="background-image: url({{ section.blocks[1].settings.image | img_url: '2048x' }});"
  >
    <div class="slideshow__text banner__content page-width">
      <div class="banner__box color-{{ section.blocks[1].settings.color_scheme | default: '1' }}">
        <h1 class="banner__heading h0">Ultra Armor</h1>
        <p class="banner__text">Military-grade drop protection.</p>
        <a href="/collections/all" class="button button--primary">Shop Now</a>
      </div>
    </div>
  </div>
</slideshow-component>

{% schema %}
{
  "name": "Casedodo Hero Slideshow",
  "settings": [
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "label": "Slide change speed (seconds)",
      "min": 3,
      "max": 9,
      "step": 1,
      "unit": "s",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background image"
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Text color scheme",
          "default": "1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero (2 slides)",
      "category": "Slideshow",
      "blocks": [{ "type": "slide" }, { "type": "slide" }]
    }
  ]
}
{% endschema %}

<section class="promo-grid page-width">
  {% for block in section.blocks %}
    <div class="promo-item" style="background-image:url({{ block.settings.image | img_url: 'master' }});">
      <div class="promo-overlay">
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.subheading }}</p>
        <a href="{{ block.settings.link }}" class="button">Shop Now</a>
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Promo Grid",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "promo",
      "name": "Promo",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Background image" },
        { "type": "text", "id": "heading", "label": "Title" },
        { "type": "text", "id": "subheading", "label": "Subtitle" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "Four promos" }]
}
{% endschema %}
